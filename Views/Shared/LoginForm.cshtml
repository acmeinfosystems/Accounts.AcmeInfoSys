<form name="loginForm">
    <div id="loginModule" title="Member Login">
        <div class="mt-3">
            <strong class="text-danger">{{loginError}}</strong>
        </div>
        <div class="form-group mt-3">
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i>&nbsp;</div>
                </div>
                <input type="email" class="form-control" ng-model="login.Username" placeholder="Username is required." required  pattern="[^' ']+" />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-key" aria-hidden="true"></i></div>
                </div>
                <input type="password" class="form-control" ng-model="login.Password" placeholder="Password is required." ng-trim="true" required  pattern="[^' ']+" />
            </div>
        </div>
        <div class="mb-2">
            <button type="button" class="btn btn-dark" ng-click="validateUser()" ng-disabled="loginForm.$invalid" id="btnLogin"><i class="fa fa-unlock-alt mr-1" aria-hidden="true"></i> Login</button>
        </div>
    </div>
</form>
